<Window
    x:Class="HealthMonitor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    Title="健康监测"
    Width="1280"
    Height="720"
    AllowsTransparency="True"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="微软雅黑"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        x:Name="windowBorder"
        BorderBrush="#ccc"
        BorderThickness="0,1,1,1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <materialDesign:ColorZone
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Mode="PrimaryDark">
                <DockPanel LastChildFill="True">
                    <Image
                        Width="30"
                        Height="50"
                        Margin="0,0,0,0"
                        DockPanel.Dock="Top"
                        Source="/Resource/safe.png" />
                    <ListBox
                        x:Name="DemoItemsListBox"
                        DockPanel.Dock="Bottom"
                        ItemContainerStyle="{StaticResource MenuListBoxItem}"
                        ItemsSource="{Binding DemoItems}"
                        SelectedIndex="{Binding SelectedIndex}"
                        SelectedItem="{Binding SelectedItem, UpdateSourceTrigger=PropertyChanged}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border>
                                    <StackPanel Background="Transparent">
                                        <materialDesign:PackIcon
                                            Width="25"
                                            Height="25"
                                            HorizontalAlignment="Center"
                                            Foreground="#fff"
                                            Kind="{Binding Icon}" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="10"
                                            Foreground="#fff"
                                            Text="{Binding ShortCut}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </materialDesign:ColorZone>


            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <materialDesign:ColorZone
                    Height="45"
                    VerticalAlignment="Center"
                    Mode="Custom"
                    MouseDown="Border_MouseDown"
                    MouseLeftButtonDown="Border_LeftButtonDown">
                    <DockPanel>
                        <TextBlock Style="{StaticResource MainTitle}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}（{1}）">
                                    <Binding Path="ApplicationName" />
                                    <Binding Path="ApplicationVersion" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <StackPanel
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right"
                            Orientation="Horizontal">
                            <Button x:Name="btnMin" Style="{StaticResource MaterialDesignFlatButton}">
                                <Button.Content>
                                    <materialDesign:PackIcon Kind="Minus" />
                                </Button.Content>
                            </Button>
                            <Button x:Name="btnMax" Style="{StaticResource MaterialDesignFlatButton}">
                                <Button.Content>
                                    <materialDesign:PackIcon x:Name="btnMaxIcon" Kind="CheckboxBlankOutline" />

                                </Button.Content>
                            </Button>
                            <Button x:Name="btnClose" Style="{StaticResource MaterialDesignFlatButton}">
                                <Button.Content>
                                    <materialDesign:PackIcon Kind="Close" />
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </DockPanel>
                </materialDesign:ColorZone>
                <Border
                    Grid.Row="1"
                    Background="#FFF9F9F9"
                    BorderBrush="#FFE5E5E5"
                    BorderThickness="2,1,0,0"
                    CornerRadius="5 0 0 0">
                    <materialDesign:DialogHost DialogTheme="Inherit" Identifier="RootDialog1">
                        <ContentControl
                            Margin="0,0,1,0"
                            Content="{Binding Content, UpdateSourceTrigger=PropertyChanged, FallbackValue={x:Null}}"
                            DataContext="{Binding SelectedItem}"
                            DockPanel.Dock="Bottom" />
                    </materialDesign:DialogHost>
                </Border>
            </Grid>
        </Grid>


    </Border>
</Window>
