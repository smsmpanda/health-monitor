<Window
    x:Class="HealthMonitor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    Title="健康监测"
    Width="1280"
    Height="720"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        x:Name="windowBorder"
        Background="#FFF7F4F5"
        BorderBrush="#ccc"
        BorderThickness="0,1,1,1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Background="#FF673AB7">
                <StackPanel Orientation="Vertical">
                    <StackPanel Height="50">
                        <Image
                            Width="30"
                            Height="50"
                            Margin="0,0,0,0"
                            Source="/Resource/safe.png" />
                    </StackPanel>
                    <ListBox
                        x:Name="DemoItemsListBox"
                        HorizontalAlignment="Center"
                        ItemsSource="{Binding DemoItems}"
                        SelectedIndex="{Binding SelectedIndex}"
                        SelectedItem="{Binding SelectedItem, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource MaterialDesignNavigationPrimaryListBox}">
                        <ListBox.Resources>
                            <Style BasedOn="{StaticResource MaterialDesignScrollBarMinimal}" TargetType="ScrollBar" />
                        </ListBox.Resources>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="domain:DemoItem">
                                <Border>
                                    <StackPanel>
                                        <materialDesign:PackIcon
                                            Width="25"
                                            Height="25"
                                            HorizontalAlignment="Center"
                                            Foreground="#fff"
                                            Kind="{Binding Icon}" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="10"
                                            Foreground="#fff"
                                            Text="{Binding ShortCut}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>


            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border
                    Background="#FFF7F4F5"
                    MouseDown="Border_MouseDown"
                    MouseLeftButtonDown="Border_LeftButtonDown">
                    <DockPanel>
                        <TextBlock Style="{StaticResource MainTitle}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}（{1}）">
                                    <Binding Path="ApplicationName" />
                                    <Binding Path="ApplicationVersion" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <StackPanel
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right"
                            Orientation="Horizontal">
                            <Button
                                x:Name="btnMin"
                                Background="#FFF7F4F5"
                                BorderThickness="0"
                                Foreground="#FF999999"
                                Style="{StaticResource MaterialDesignFlatMidBgButton}">
                                <Button.Content>
                                    <materialDesign:PackIcon Kind="Minus" />
                                </Button.Content>
                            </Button>
                            <Button
                                x:Name="btnMax"
                                Background="#FFF7F4F5"
                                BorderThickness="0"
                                Foreground="#FF999999"
                                Style="{StaticResource MaterialDesignFlatMidBgButton}">
                                <Button.Content>
                                    <materialDesign:PackIcon Kind="CheckboxBlankOutline" />

                                </Button.Content>
                            </Button>
                            <Button
                                x:Name="btnClose"
                                Background="#FFF7F4F5"
                                BorderThickness="0"
                                Foreground="#FF999999"
                                Style="{StaticResource MaterialDesignFlatMidBgButton}">
                                <Button.Content>
                                    <materialDesign:PackIcon Kind="Close" />
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </DockPanel>

                </Border>


                <Border
                    Grid.Row="1"
                    Background="#FFF9F9F9"
                    BorderBrush="#FFE5E5E5"
                    BorderThickness="1,1,0,0"
                    CornerRadius="5 0 0 0">
                    <materialDesign:DialogHost DialogTheme="Inherit" Identifier="RootDialog1">
                        <ContentControl
                            Margin="{Binding MarginRequirement, FallbackValue=0}"
                            Content="{Binding Content, UpdateSourceTrigger=PropertyChanged, FallbackValue={x:Null}}"
                            DataContext="{Binding SelectedItem}"
                            DockPanel.Dock="Bottom" />
                    </materialDesign:DialogHost>
                </Border>
            </Grid>
        </Grid>


    </Border>
</Window>
