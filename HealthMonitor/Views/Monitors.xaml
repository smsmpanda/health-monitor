                        </StackPanel>
                    </TabItem.Header>

                    <Grid>
                        <wpf:ChromiumWebBrowser x:Name="Browser" Address="{Binding AlarmSettingAddress}" />
                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
